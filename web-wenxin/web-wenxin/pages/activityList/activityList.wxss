.container {
  padding: 10px;
  background-color: #f5f5f5;
}

.activity-list {
  margin-top: 20px;
}

.activity-item {
  background-color: #ffffff;
  padding: 15px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 5px;
}

.activity-info {
  flex-grow: 1;
}

.activity-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.activity-time, .activity-location, .activity-organizer {
  font-size: 14px;
  color: #666;
}

.activity-status {
  font-size: 14px;
  padding: 2px 10px;
  border-radius: 15px;
  color: #fff;
}

.activity-status.open {
  background-color: #4CAF50;
}

.activity-status.closed {
  background-color: #F44336;
}
