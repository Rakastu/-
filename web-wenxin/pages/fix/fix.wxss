/* pages/fix/fix.wxss */
.container {
  margin: 20px;
  background-color: #ffffff;
  padding: 15px;
  border-radius: 5px;
}

.form-item {
  margin-bottom: 15px;
}

label {
  display: inline-block;
  width: 100px;
  text-align: right;
  margin-right: 10px;
}

input,
textarea {
  width: 200px;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 3px;
  padding: 0 10px;
}

textarea {
  height: 40px;
  resize: none;
}

.submit-button {
  width: 100%;
  height: 40px;
  background-color: #007bff;
  color: #fff;
  border-radius: 5px;
  font-size: 18px;
  border: none;
  cursor: pointer;
}

.submit-button:hover {
  background-color: #0056b3;
}
