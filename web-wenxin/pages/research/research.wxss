/* pages/research/research.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color:rgb(236, 236, 231) ; /* 深色背景 */
  z-index: 1000; /* 确保导航栏位于最上层 */
  box-shadow: 0 2px 4px rgba(87, 159, 201, 0.2); /* 添加阴影效果以突出层次感 */
}

.nav-button {
  flex: 1;
  padding: 15px 10px; /* 调整内边距 */
  text-align: center;
  border: none;
  background-color: transparent;
  color: black;
  font-size: 16px;
  border-radius: 0; /* 移除圆角（如有） */
}

.content {
  padding: 20px;
}

.search-box {
  width: 90%;
  height: 40px;
  margin: 10px;
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 20px;
}

.news-section {
  width: 100%;
  padding: 10px;
}

.news-title {
  font-size: 18px;
  color: #333;
  margin-bottom: 5px;
}

.news-list {
  display: flex;
  flex-direction: column;
}

.news-item {
  margin: 5px;
  padding: 10px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.news-summary {
  font-size: 14px;
  color: #666;
}
