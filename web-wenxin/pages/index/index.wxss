/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.btn {
  width: 200px;
  height: 40px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 20px;
  font-size: 16px;
  text-align: center;
  line-height: 40px;
  margin-bottom: 20px;
}

.appointments {
  width: 80%;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.appointment {
  background-color: #f4f4f4;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 5px;
}

.empty {
  font-size: 16px;
  color: #999;
}
