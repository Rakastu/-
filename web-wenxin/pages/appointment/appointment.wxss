/* 添加样式美化 */
.time-button {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.time-button:hover {
  background-color: #007bff;
}

button {
  margin-top: 10px;
  width: 80%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #f0f0f0;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
}

button:hover {
  background-color: #e5e5e5;
}
