.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #f5f5f5;
}

.activity-header {
  background-color: #ffffff;
  padding: 15px;
  border-radius: 5px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.activity-name {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.activity-time, .activity-location, .activity-organizer, .activity-status {
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

.activity-status {
  font-weight: 500;
  margin-top: 5px;
  display: inline-block;
  padding: 2px 8px;
  color: #fff;
  border-radius: 15px;
}

.activity-status.open {
  background-color: #24c516;
}

.activity-status.closed {
  background-color: #2522a8;
}

.participant-list {
  background-color: #ffffff;
  padding: 15px;
  border-radius: 5px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.title {
  font-size: 16px;
  color: #333;
  font-weight: bold;
  margin-bottom: 10px;
}

.participant {
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

.signup-btn {
  background-color: #1aad19;
  color: #ffffff;
  font-size: 16px;
  padding: 10px 0;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.signup-btn:active {
  background-color: #159818;
}
.participant {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
}

.participant text {
  flex: 1;
  text-align: center;
}

.signup-btn {
  background-color: #1aad19;
  color: #ffffff;
  font-size: 16px;
  padding: 10px 0;
  border: none;
  border-radius: 5px;
  margin-top: 20px;
}

.signup-btn:active {
  background-color: #159818;
}